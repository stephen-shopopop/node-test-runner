{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "test-runner",
  "description": "node:test wrapper",
  "version": "0.1.0",
  "type": "module",
  "main": "runner.js",
  "bin": {
    "runner": "runner.js"
  },
  "scripts": {
    "test": "node runner.js",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "maintenance": "npm run clean && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && npm cache clean --force",
    "secure": "npx --yes @nodesecure/cli@2.4.0 cwd && npx @nodesecure/cli@2.4.0 open",
    "tarball:check": "npm pack --dry-run"
  },
  "author": "Stephen Deletang <me@stephendeletang.com>",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stephen-shopopop/node-test-runner"
  }
}
