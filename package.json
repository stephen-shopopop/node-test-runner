{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@stephen-shopopop/runner",
  "description": "node:test wrapper",
  "version": "0.4.0",
  "type": "module",
  "main": "runner.js",
  "bin": {
    "runner": "bin/runner"
  },
  "private": false,
  "scripts": {
    "test": "npm run test:js && npm run test:typescript && npm run test:bin",
    "test:js": "node runner.js -f *.test.js",
    "test:typescript": "tsc --pretty --noEmit && tsx runner.js -f *.test.ts",
    "test:bin": "./bin/runner -f *.test.js && ./bin/runner -f sync.test.ts",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "maintenance": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && npm cache clean --force",
    "tarball:check": "npm pack --dry-run"
  },
  "author": "Stephen Deletang <me@stephendeletang.com>",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.10.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stephen-shopopop/node-test-runner"
  },
  "dependencies": {
    "@reporters/github": "^1.7.2"
  }
}
